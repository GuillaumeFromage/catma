{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 800,
  "height": 400,
  "padding": 0,
  "data": [
    {
      "name": "table",
      "url": "CATMA_QUERY_URL",
      "transform": [
        {
          "type": "countpattern",
          "field": "phrase",
          "pattern": ".+"
        },
  
        {
          "type": "formula", "as": "weight",      
          "expr": "datum.count"
      
        }
      ]
    }
  ], 
  "scales": [
 {
  "name": "color",
  "domain": {"data": "table", "field": "count"},
   "range": ["#C0C0C0", "#000000"]

}
  ],
  "marks": [
    {
      "type": "text",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "text": {"field": "text"},
          "align": {"value": "center"},
          "baseline":{"value": "alphabetic"},
           "fill": {"scale": "color", "field": "count"}
        
        },
        "update": {
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}
        }
      },
      "transform": [
        {
          "type": "wordcloud",
          "size": [800, 400],
          "text": {"field": "text"},
          "font": " Arial",
          "fontSize": {"field": "datum.count"},
          "fontSizeRange": [12, 56],
          "padding": 2
        }
      ]
    }
  ]
}