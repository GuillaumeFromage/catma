<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="catma">
  <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.c3p0.min_size">15</property>
  <property name="hibernate.c3p0.max_size">500</property>
  <property name="hibernate.c3p0.timeout">1800</property>
  <property name="hibernate.c3p0.max_statements">50</property>
  <!-- <property name="hibernate.current_session_context_class">managed</property> -->
  <mapping class="de.catma.repository.db.model.DBUser"/>
  <mapping class="de.catma.repository.db.model.DBSourceDocument"/>
  <mapping class="de.catma.repository.db.model.DBUnseparableCharsequence"/>
  <mapping class="de.catma.repository.db.model.DBUserDefinedSeparatingCharacter"/>
  <mapping class="de.catma.repository.db.model.DBUserSourceDocument"/>
  <mapping class="de.catma.repository.db.model.DBUserMarkupCollection"/>
  <mapping class="de.catma.repository.db.model.DBUserUserMarkupCollection"/>
  <mapping class="de.catma.repository.db.model.DBTagLibrary"/>
  <mapping class="de.catma.repository.db.model.DBUserTagLibrary"/>
  <mapping class="de.catma.repository.db.model.DBTagLibrary"/>
  <mapping class="de.catma.repository.db.model.DBTagsetDefinition"/>
  <mapping class="de.catma.repository.db.model.DBTagDefinition"/>
  <mapping class="de.catma.repository.db.model.DBPropertyDefinition"/>
  <mapping class="de.catma.repository.db.model.DBPropertyDefPossibleValue"/>
  <mapping class="de.catma.repository.db.model.DBTagReference"/>
  <mapping class="de.catma.repository.db.model.DBTagInstance"/>
  <mapping class="de.catma.repository.db.model.DBProperty"/>
  <mapping class="de.catma.repository.db.model.DBPropertyValue"/>
  <mapping class="de.catma.repository.db.model.DBCorpus"/>
  <mapping class="de.catma.repository.db.model.DBCorpusSourceDocument"/>
  <mapping class="de.catma.repository.db.model.DBCorpusStaticMarkupCollection"/>
  <mapping class="de.catma.repository.db.model.DBCorpusUserMarkupCollection"/>
  <mapping class="de.catma.repository.db.model.DBUserCorpus"/>
  
  <mapping class="de.catma.indexer.db.model.DBTerm"/>
  <mapping class="de.catma.indexer.db.model.DBPosition"/>
  <mapping class="de.catma.indexer.db.model.DBIndexTagReference"/>
  <mapping class="de.catma.indexer.db.model.DBIndexProperty"/>
 </session-factory>
</hibernate-configuration>
